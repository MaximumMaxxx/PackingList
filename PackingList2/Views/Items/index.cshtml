@model IEnumerable<PackingList2.Models.Item>

<!DOCTYPE html>

<h1 class="text-center">Welcome gamer</h1>

<html lang="en">
<head>
    <title>Items</title>
</head>
<body>
@if (Model.Count() > 0)
{
    <form class="input-group mb-3" method="post">
        <input name="query" type="text" class="form-control" placeholder="Search query" aria-label="Search query" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Submit</button>
        </div>
    </form>
    <table class="table">
        <tr class="table-secondary">
            <th>Name </th>
            <th>Category </th>
            <th>Count </th>
            <th>Note </th>
            <th>Action </th>
        </tr>
    </table>
    @foreach (var item in Model)
    {
        <table class="table">
            <tr>
                <td>@item.Name </td>
                <td>@item.Category </td>
                <td>@item.Count </td>
                <td>@item.Notes </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"> Edit </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> Delete </a>
                </td>
            </tr>
        </table>
    }
}
else
{
    <h2>Oops</h2>
    <p>
        Looks like there's no items that we could find,
        Consider adding one in the top bar
    </p>
}
</body>
</html>